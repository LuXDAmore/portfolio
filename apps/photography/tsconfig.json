{
    "extends": [
        "@tsconfig/nuxt/tsconfig.json",
        "./.nuxt/tsconfig.json"
    ],
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "~": [
                "./app"
            ],
            "~/*": [
                "./app/*"
            ],
            "~~": [
                "."
            ],
            "~~/*": [
                "./*"
            ]
        }
    }
}
