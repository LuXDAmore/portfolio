{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "exclude": [
        "dist",
        ".output",
        "node_modules",
        "public",
        ".nx",
        ".husky",
        ".github",
        ".cspell",
        ".circleci"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "module": "esnext",
        "moduleResolution": "bundler",
        "customConditions": [
            "source"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "noEmit": true,
        "lib": [
            "ESNext",
            "dom",
            "dom.iterable",
            "webworker"
        ],
        "jsx": "preserve",
        "useDefineForClassFields": true,
        "noImplicitThis": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@abilio/base": [
                "apps/@base"
            ],
            "@abilio/base/*": [
                "apps/@base/*"
            ],
            "@abilio/annunci-industriali": [
                "apps/annunci-industriali"
            ],
            "@abilio/annunci-industriali/*": [
                "apps/annunci-industriali/*"
            ],
            "@abilio/fallimenti": [
                "apps/fallimenti"
            ],
            "@abilio/fallimenti/*": [
                "apps/fallimenti/*"
            ],
            "@abilio/quimmo": [
                "apps/quimmo"
            ],
            "@abilio/quimmo/*": [
                "apps/quimmo/*"
            ],
            "@abilio/design-system": [
                "packages/design-system"
            ],
            "@abilio/design-system/*": [
                "packages/design-system/*"
            ],
            "@abilio/layer-alias": [
                "packages/layer-alias"
            ],
            "@abilio/layer-alias/*": [
                "packages/layer-alias/*"
            ],
            "@abilio/nuxt-apis-to-file": [
                "packages/nuxt-apis-to-file"
            ],
            "@abilio/nuxt-apis-to-file/*": [
                "packages/nuxt-apis-to-file/*"
            ],
            "@abilio/stylesheets": [
                "packages/stylesheets"
            ],
            "@abilio/stylesheets/*": [
                "packages/stylesheets/*"
            ]
        }
    }
}
